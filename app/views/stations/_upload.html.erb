<div id="upload_modal" class="modal hide">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"></button>
				<h3 id="myModalLabel">Add a song</h3>
			</div>
			<div class="modal-body">
					<%= form_for(Song.new, :remote => true, :multi_part => true)  do |f| %>
					<%= file_field_tag "mp3file", :class => "btn" %><br />
					<%= hidden_field_tag "station_id", station.id %>
					<%= f.submit "Upload", :onclick => "$(#upload_modal').hide();", :class => "btn" %>
					<% end %>
			</div>
			<div class="modal-footer">
					<button class="btn" class="close" data-dismiss="modal" onclick='$("#upload_modal").hide();'>Close</button>
			</div>	
</div>