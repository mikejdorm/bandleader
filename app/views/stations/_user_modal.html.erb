<div id="user_modal" class="modal hide">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"></button>
				<h3 id="myModalLabel">Users connected to <%= station.event_name %> </h3>
			</div>
			<div class="modal-body">
		<% station.connections.each do |connection| %>
			<% user = User.find_by_id(connection.user_id) %> 
			<% if user.avatar %> 
					<%= link_to image_tag(user.avatar), user %>
			<% else %> 
					<%= link_to image_tag('no_avatar.jpg'), user %>
			<% end %> 
			<%= link_to user.username, user %> 
			
		<% end %> 
				</div>
			<div class="modal-footer">
					<button class="btn" class="close" data-dismiss="modal" onclick='$("#user_modal").hide();'>Close</button>
			</div>	
</div>