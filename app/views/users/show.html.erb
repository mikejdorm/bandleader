<p id="notice"><%= notice %></p>
<div class="row"> 
	<div class="span4"> 
		<img src="<%=@user.avatar.url%>" class="img-polaroid">
	</div>
			
	<div class="span4"> 	
	<p>
	  <b>Username:</b>
	  <%= @user.username %>
	</p>
	<p>
	  <b>Email:</b>
	  <%= @user.email %>
	</p>
		
	<% if session[:user_id] = @user.id %>
	<%= link_to 'Edit', edit_user_path(@user) %> 
	<% end %>
	
	</div> 
	<div class="span4"> 
	<% if @user_stations.count > 0 %>
		<h3><%= @user.username %>'s Stations</h4> 
		<% @user_stations.each do |station| %> 
		<div class="user_activity"> 
		<%= render :partial => 'station', :object => station %> 
		</div>
	<% end %> 
	<% end %> 
	<h3>Recent Activity</h3> 
	<% @activity.each do |element| %> 
			<div class="user_activity"> 
			<%= render :partial => element[:class].class.name.downcase!, :object => element[:class] %> 
			</div>
	<% end %> 

	</div> 
</div> 